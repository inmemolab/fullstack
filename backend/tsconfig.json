{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "declaration": true,
    "noEmit": false,
    "importHelpers": true,
    "allowJs": true,
    "removeComments": true,
    "lib": ["ES2021", "esnext.asynciterable"],
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": ["@types/node", "@types/express", "@types/jest", "jest", "cypress"]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/server.ts",
    "src/env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.json",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types/**/*.d.ts",
    "types/**/*.ts",
    ".env"
  ],
  "exclude": [
    "node_modules",
    "src/http",
    "src/logs",
    "src/tests",
    "dist",
    "**/*.js",
    "**/*.md",
    "src/**/*.md"
  ]
}
